{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BooksList",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "pageCount",
      "publishDate"
    ],
    "properties": {
      "id": {
        "type": "integer"
      },
      "title": {
        "type": ["string", "null"]
      },
      "description": {
        "type": ["string", "null"]
      },
      "pageCount": {
        "type": "integer"
      },
      "excerpt": {
        "type": ["string", "null"]
      },
      "publishDate": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}
