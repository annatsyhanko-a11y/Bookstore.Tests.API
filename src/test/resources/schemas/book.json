{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Book",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "pageCount",
    "excerpt",
    "publishDate"
  ],
  "properties": {
    "id": { "type": "integer" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "pageCount": { "type": "integer" },
    "excerpt": { "type": "string" },
    "publishDate": { "type": "string", "format": "date-time" }
  }
}